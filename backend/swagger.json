    "/shadowing/upsert": {
      "put": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "target_text": {
                    "type": "string"
                  },
                  "source_type": {
                    "type": "string",
                    "enum": [
                      "ai_message",
                      "native_expression",
                      "reference_answer"
                    ]
                  },
                  "source_id": {
                    "type": "string"
                  },
                  "scene_key": {
                    "type": [
                      "string",
                      "null"
                    ]
                  },
                  "pronunciation_score": {
                    "type": "number"
                  },
                  "accuracy_score": {
                    "type": "number"
                  },
                  "fluency_score": {
                    "type": "number"
                  },
                  "completeness_score": {
                    "type": "number"
                  },
                  "prosody_score": {
                    "type": [
                      "number",
                      "null"
                    ]
                  },
                  "word_feedback": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string",
                          "example": "the"
                        },
                        "score": {
                          "type": "number",
                          "example": 92.3
                        },
                        "level": {
                          "type": "string",
                          "enum": [
                            "perfect",
                            "warning",
                            "error",
                            "missing"
                          ],
                          "example": "perfect"
                        },
                        "error_type": {
                          "type": "string",
                          "example": "None"
                        },
                        "phonemes": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "phoneme": {
                                "type": "string",
                                "example": "ð"
                              },
                              "accuracy_score": {
                                "type": "number",
                                "example": 85.5
                              },
                              "offset": {
                                "type": "number"
                              },
                              "duration": {
                                "type": "number"
                              }
                            },
                            "required": [
                              "phoneme",
                              "accuracy_score"
                            ]
                          }
                        }
                      },
                      "required": [
                        "text",
                        "score",
                        "level",
                        "error_type",
                        "phonemes"
                      ]
                    }
                  },
                  "feedback_text": {
                    "type": "string"
                  },
                  "segments": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string",
                          "example": "The quick brown"
                        },
                        "start_index": {
                          "type": "number",
                          "example": 0
                        },
                        "end_index": {
                          "type": "number",
                          "example": 2
                        },
                        "score": {
                          "type": "number",
                          "example": 85.5
                        },
                        "has_error": {
                          "type": "boolean",
                          "example": false
                        },
                        "word_count": {
                          "type": "number",
                          "example": 3
                        }
                      },
                      "required": [
                        "text",
                        "start_index",
                        "end_index",
                        "score",
                        "has_error",
                        "word_count"
                      ]
                    }
                  }
                },
                "required": [
                  "target_text",
                  "source_type",
                  "source_id",
                  "scene_key",
                  "pronunciation_score"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Practice saved/updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "practiced_at": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "id",
                        "practiced_at"
                      ]
                    }
                  },
                  "required": [
                    "success",
                    "data"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "debug_error": {
                      "type": "string"
                    },
                    "details": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
