{
  "openapi": "3.1.0",
  "info": {
    "version": "0.1.0",
    "title": "TriTalk API"
  },
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "Health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "status"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/chat/send": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Hello, how are you?"
                  },
                  "history": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "role": {
                          "type": "string"
                        },
                        "content": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "role",
                        "content"
                      ]
                    },
                    "example": [
                      {
                        "role": "user",
                        "content": "Hi"
                      }
                    ]
                  },
                  "scene_context": {
                    "type": "string",
                    "example": "Coffee shop ordering"
                  },
                  "native_language": {
                    "type": "string",
                    "example": "Chinese (Simplified)"
                  },
                  "target_language": {
                    "type": "string",
                    "example": "English"
                  }
                },
                "required": [
                  "message",
                  "scene_context"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chat response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "I am fine, thanks."
                    },
                    "translation": {
                      "type": "string",
                      "example": "我很好，谢谢。"
                    },
                    "review_feedback": {
                      "type": "object",
                      "properties": {
                        "is_perfect": {
                          "type": "boolean",
                          "example": false
                        },
                        "corrected_text": {
                          "type": "string",
                          "example": "Hello, how are you doing?"
                        },
                        "native_expression": {
                          "type": "string",
                          "example": "Chinese expression"
                        },
                        "explanation": {
                          "type": "string",
                          "example": "Added 'doing' for continuous aspect."
                        },
                        "example_answer": {
                          "type": "string",
                          "example": "I am doing well."
                        }
                      },
                      "required": [
                        "is_perfect",
                        "corrected_text",
                        "native_expression",
                        "explanation",
                        "example_answer"
                      ]
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "debug_error": {
                      "type": "string"
                    },
                    "details": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
